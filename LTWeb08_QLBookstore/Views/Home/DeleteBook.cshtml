@model LTWeb08_QLBookstore.Models.SACH

@{
    ViewBag.Title = "DeleteBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>XÁC NHẬN THÔNG TIN SÁCH CẦN XÓA</h2>
<h3>Bạn quyết định xóa quyển sách này?</h3>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}


<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sách
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENSACH)
        </dd>

        <dt>
            Giá bán
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.GIABAN) VNĐ
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MOTA)
        </dd>

        <dt>
            Ảnh bìa
        </dt>

        <dd>
            <img style="width:120px" src="@Url.Content("~/Content/Images/" + Model.ANHBIA)" alt="AnhBia_Chitiet" />
        </dd>

        <dt>
            Ngày cập nhật
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.NGAYCAPNHAT)
        </dd>

        <dt>
            Mã chủ đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MACHUDE)
        </dd>

        <dt>
            Mã NXB
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MANXB)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MASACH)

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Về trang chủ", "ListBook")
        </div>
    }
</div>
