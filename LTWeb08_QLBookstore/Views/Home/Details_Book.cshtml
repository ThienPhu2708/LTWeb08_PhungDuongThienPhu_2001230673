@model LTWeb08_QLBookstore.Models.SACH

@{
    ViewBag.Title = "Details_Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>THÔNG TIN CHI TIẾT SÁCH</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
          Tên sách
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENSACH)
        </dd>

        <dt>
            Giá bán
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.GIABAN) VNĐ
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MOTA)
        </dd>

        <dt>
            Ảnh bìa
        </dt>

        <dd>
            <img style="width:120px" src="@Url.Content("~/Content/Images/" + Model.ANHBIA)"  alt="AnhBia_Chitiet" />
        </dd>

        <dt>
           Ngày cập nhật
        </dt>

        <dd>
          @String.Format("{0:dd/MM/yyyy}", Model.NGAYCAPNHAT)
        </dd>

        <dt>
            Mã chủ đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MACHUDE)
        </dd>

        <dt>
            Mã NXB
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MANXB)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Điều chỉnh", "Edit", new { id = Model.MASACH }) |
    @Html.ActionLink("Trở về", "ListBook") |
    @Html.ActionLink("Xóa","DeleteBook", new {id=Model.MASACH})
</p>
