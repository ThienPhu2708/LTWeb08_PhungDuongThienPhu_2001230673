@model IEnumerable<QL_Employee.Models.DEPARTMENT>

@{
    ViewBag.Title = "Danh sách phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-3">DANH SÁCH PHÒNG BAN</h2>

<div class="container mt-3">
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Mã phòng ban</th>
                <th>Tên phòng ban</th>
                <th>Xem nhân viên</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DEPT_ID</td>
                    <td>@item.NAME</td>
                    <td>
                        @Html.ActionLink("Xem nhân viên", "EmployeeByDept", new { id = item.DEPT_ID }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
