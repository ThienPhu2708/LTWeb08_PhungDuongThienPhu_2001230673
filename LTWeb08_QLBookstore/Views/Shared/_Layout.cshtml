<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="~/Content/Script.js"></script>
</head>
<body>

    <!-- Header Section -->
    <header>
        <div class="container">
            <div class="header-content">
                <div class="logo">Nhà Sách ABC Online.com</div>
                <nav>
                    <ul>
                        <li>@Html.ActionLink("TRANG CHỦ", "ListBook", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("THÊM MỚI SÁCH", "Create_Book", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li><a href="login.html" class="btn btn-login">Đăng nhập</a></li>
                        <li><a href="register.html" class="btn btn-register">Đăng ký ngay</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>


    <!-- Main Content Section -->
    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>


    <!-- Footer Section -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Thông Tin Liên Hệ</h3>
                    <p>Địa chỉ: 170 Lê Trọng Tấn, Quận Tân Phú, TP. Hồ Chí Minh</p>
                    <p>Điện thoại: (0123) 456-789</p>
                    <p>Email: ThienPhu_2001230673@example.com</p>
                </div>
                <div class="footer-section">
                    <h3>Liên Kết Nhanh</h3>
                    <a href="#">Trang Chủ</a>
                    <a href="#">Giới Thiệu</a>
                    <a href="#">Dịch Vụ</a>
                    <a href="#">Sản Phẩm</a>
                </div>
                <div class="footer-section">
                    <h3>Theo Dõi Chúng Tôi</h3>
                    <a href="#">Facebook</a>
                    <a href="#">Twitter</a>
                    <a href="#">Instagram</a>
                    <a href="#">LinkedIn</a>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; Công ty Phát triển ABC. Tất cả các quyền được bảo lưu. | Phát triển bởi Thiên Phú - 2001230673</p>
            </div>
        </div>
    </footer>





    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



